body
    background-color cadetblue
    color #333
    font-family 'Arial','sans-serif'
    font-size 14px
    
.container
    background-color #fff
    width 60%
    margin 20px auto
    padding 25px
    overflow auto
    
header
    text-align center
    border-bottom 1px dashed #777
    
    
header h1
    margin 5px
    padding 5px
    
section
    min-height 400px
    
footer
    text-align center
    
input[type="submit"]
    background-color cadetblue
    border 0
    color #fff
    padding 10px
    
#results h3
    background-color cadetblue
    color #fff
    padding 10px 
    margin 10px 0
    
#results span
    font-weight bold
    color #000
    